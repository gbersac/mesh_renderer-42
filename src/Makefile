################################################################################
# BASIC VARIABLES															   #
################################################################################

export DEBUG		:= -g -O0

################################################################################
# LIBRARY VARIABLES															   #
################################################################################

export DIR_SDL		:= sdl2
export DIR_LIB		:= 
export APP			:= scop 

################################################################################
# RULES																		   #
################################################################################

.PHONY: all $(APP)

all:  $(APP)

$(DIR_LIB):
	@echo
	@echo \	MAKE $(RULE) in directory : $@
	@$(MAKE) --directory=$@  $(RULE)

$(APP): $(DIR_LIB)
	@echo
	@echo \	MAKE $(RULE) in directory : $@
	@$(MAKE) --directory=$@  $(RULE)

clean:
	make RULE=clean

fclean:
	make RULE=fclean

re:
	make RULE=re

